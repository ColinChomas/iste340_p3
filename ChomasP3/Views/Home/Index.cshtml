@model ChomasP3.Models.EmploymentModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <h1 class="display-5">Welcome to the RIT iSchool Webpage!</h1>
    <hr />
    <div>
        <h3>@Model.introduction.title</h3>
        @foreach(var content in Model.introduction.content)
        {
            <h5>@content.title</h5>
            <p>@content.description</p>
        }
    </div>
    <hr />
    <div>
        <h3>@Model.degreeStatistics.title</h3>
        @foreach(var stat in Model.degreeStatistics.statistics)
        {
            <h2>@stat.value</h2>
            <br />
            <h5>@stat.description</h5>
        }
    </div>
    <hr />
    <div>
        <h3>@Model.employers.title</h3>
        @foreach(var employer in Model.employers.employerNames)
        {
            <ul>
                <li>@employer</li>
            </ul>
        }
    </div>
    <hr />
    <div>
        <h3>@Model.careers.title</h3>
        @foreach(var career in Model.careers.careerNames)
        {
            <ul>
                <li>@career</li>
            </ul>
        }
    </div>
    <hr />
    <div>
        <h3>@Model.coopTable.title</h3>
        <table id="coopTable" class="display">
            <thead>
                <tr>
                    <th>Employer</th>
                    <th>Degree</th>
                    <th>City</th>
                    <th>Term</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var coop in Model.coopTable.coopInformation)
                {
                    <tr>
                        <td>@coop.employer</td>
                        <td>@coop.degree</td>
                        <td>@coop.city</td>
                        <td>@coop.term</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <hr />
    <div>
        <h3>@Model.employmentTable.title</h3>
        @foreach (var employer in Model.employmentTable.professionalEmploymentInformation)
        {
            <div>
                <ul>
                    <li>@employer.employer</li>
                    <li>@employer.degree</li>
                    <li>@employer.city</li>
                    <li>@employer.title</li>
                    <li>@employer.startDate</li>
                </ul>
            </div>
        }
    </div>
</div>
